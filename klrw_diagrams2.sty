%% TikZ style settings

\tikzset{
  % centering commands
  anchorbase/.style={baseline={([yshift=#1]current bounding box.center)}},
  anchorbase/.default={-0.5ex},
  % default string colours
  affine colour/.initial=orange,
  affine color/.style={affine colour=#1},
  red colour/.initial=red,
  red color/.style={red colour=#1},
  ghost colour/.initial=gray,
  ghost color/.style={ghost colour=#1},
  ghost shift/.initial=1,
  solid colour/.initial=blue,
  solid color/.style={solid colour=#1},
  % KLRW node and string styles
  klrw node/.style = {
  },
  klrw string/.style = {
     very thick,
     rounded corners,
  },
  % string labels
  klrw label/.style = {
      font=\scriptsize,
  },
  add string label/.style 2 args= { % colour, label
    decoration = {
      markings,
      mark = at position 0 with {
          \node[below, klrw label, text={\pgfkeysvalueof{/tikz/#1 colour}}]  {$#2$}; },
    },
    postaction = { decorate }
  },
  add ghost label/.style 2 args = { % offset, label
    decoration = {
      markings,
      mark = at position 1 with {
          \node[above, klrw label,
                text={\pgfkeysvalueof{/tikz/ghost colour}},
                shift={(#1, 0)}] {$#2$};
      },
    },
    postaction = { decorate }
  },
  % red, affine solid and ghost strings
  red string/.style = {
    klrw string,
    double=\pgfkeysvalueof{/tikz/red colour}!40,
    draw=\pgfkeysvalueof{/tikz/red colour},
    double distance = 1pt,
    add string label = {red}{#1},
  },
  affine/.style = {
    klrw string,
    double=\pgfkeysvalueof{/tikz/affine colour}!40,
    draw=\pgfkeysvalueof{/tikz/affine colour},
    double distance = 1pt,
    add string label = {affine}#1,
  },
  solid/.style = {
    klrw string,
    draw=\pgfkeysvalueof{/tikz/solid colour},
    add string label = {solid}{#1},
  },
  ghost/.style = {
    draw ghost string,
    add ghost label = { 0 }{ #1 },
  },
  draw ghost string/.style = {
    klrw string,
    draw=\pgfkeysvalueof{/tikz/ghost colour},
    dashed,
  },
  double ghost/.style = {
    draw ghost string,
    double,
  },
  % solid strings with ghosts
  solid ghost/.style = {
      solid = #1,
      preaction={
          draw ghost string,
          dashed,
          transform canvas={shift={(\pgfkeysvalueof{/tikz/ghost shift},0)}}
      },
      add ghost label = { \pgfkeysvalueof{/tikz/ghost shift} }{ #1 },
  },
  % dots on strings
  dot/.style = {
    decoration={
      markings,
      mark=at position #1 with {
        \node[text=\pgfkeysvalueof{/tikz/solid colour}]{$\bullet$};
        \node[text=\pgfkeysvalueof{/tikz/ghost colour},
              xshift=\pgfkeysvalueof{/tikz/ghost shift}]{$\bullet$};
      },
    },
    preaction={
      decorate
    },
  },
  dot/.default=0.5,
}

